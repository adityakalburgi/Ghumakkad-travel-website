        /* Base button styles */
.button {
    background-color: #ff6600;
    color: white;
    padding: 15px 30px;
    font-size: 18px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    z-index: 1;
}

/* Hover effect */
.button:hover {
    color: transparent; /* Hide the original text */
    background-color: transparent;
    border: 2px solid #ff6600;
    box-shadow: 0px 4px 15px rgba(255, 102, 0, 0.4);
}

/* Text change using the ::after pseudo-element */
.button::after {
    content: 'Let\'s Go!'; /* New text to appear on hover */
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    opacity: 0;
    transition: opacity 0.3s ease;
    color: #f6f5f4; /* Color for new text */
    font-weight: bold;
}

/* Hover state for ::after */
.button:hover::after {
    opacity: 1;
}

/* Expanding outline animation */
.button::before {
    content: ''; 
    position: absolute;
    top: 50%;
    left: 50%;
    width: 300%;
    height: 300%;
    background-color: #ff6600;
    transition: all 0.4s ease;
    border-radius: 50%;
    z-index: -1;
    transform: translate(-50%, -50%) scale(0);
}

.button:hover::before {
    transform: translate(-50%, -50%) scale(1);
}

/* Make it responsive */
@media (max-width: 768px) {
    .button {
        padding: 12px 24px;
        font-size: 16px;
    }
}

@media (max-width: 480px) {
